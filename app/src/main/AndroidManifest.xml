<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.rechinx.meow">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBlue">
        <activity android:name=".module.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.result.ResultActivity" />
        <activity android:name=".module.reader.PageReaderActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".module.reader.StreamReaderActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".module.detail.DetailActivity"/>
        <activity android:name=".module.about.AboutActivity" />
        <activity android:name=".module.login.LoginActivity" />
    </application>

</manifest>