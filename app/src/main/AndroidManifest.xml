<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="top.rechinx.meow">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBlue"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.home.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.result.ResultActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.details.DetailActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.reader.ReaderActivity" />
        <activity android:name=".ui.setting.SettingsActivity" />
        <activity android:name=".ui.filter.FilterActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.details.chapters.ChaptersActivity" />
        <activity android:name=".ui.task.TaskActivity"
            android:launchMode="singleTop"/>
        <service android:name=".data.download.DownloadService"
            android:exported="false" />
    </application>

</manifest>